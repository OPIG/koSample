<script type="text/html" id="testAddEditTemplate">
    <div class="pane fixed" data-bind="visible:paneVisible" style="display:none;">
        <div class="pane-out"></div>
        <div class="pane-in">
            <div class="pane-in-head"><span data-bind="text:__Title"></span></div>
            <div class="pane-in-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">Title</label>
                        <input type="text" class="form-control" maxlength="50" data-bind="value:Title,hasFocus:firstFieldHasFocus" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Content</label>
                        <textarea class="form-control" maxlength="500" data-bind="value:Content" />
                    </div>
                </form>
            </div>
            <div class="pane-in-foot">
                <a href="javascript:;" class="btn" data-bind="click:submit">OK</a>
                <a href="javascript:;" class="btn" data-bind="click:close">Cancel</a>
            </div>
            <div class="pane-in-cover" data-bind="visible:loading">
                <i class="fa fa-spin fa-circle-o-notch loading"></i>
            </div>
        </div>
    </div>
</script>